@page
@model BAIS3150RazorPages.Pages.ControlSampleModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Control Sample</title>
    </head>
    <body>
        <form name="ControlSampleForm" method="post" action="~/TestPost">
            <table>
                <tr>
                    <td>Test Box: </td>
                    <td>
                        <input type="text" name="TextBox"/>
                    </td>
                </tr>
                <tr>
                    <td>Check Box: </td>
                    <td>
                        <input type="checkbox" name="CheckBoxItem1" value="1" />Item 1<br />
                        <input type="checkbox" name="CheckBoxItem2" value="2" />Item 2<br />
                        <input type="checkbox" name="CheckBoxItem3" value="3" />Item 3<br />
                    </td>
                </tr>
                <tr>
                    <td>Radio Button: </td>
                    <td>
                        <input type="radio" name="RadioButton" value="1" />Item 1<br />
                        <input type="radio" name="RadioButton" value="2" />Item 2<br />
                        <input type="radio" name="RadioButton" value="3" />Item 3<br />
                    </td>
                </tr>
                <tr>
                    <td>Hidden Field: </td>
                    <td>
                        <input type="hidden" name="HiddenField" value="This is hidden"/>
                    </td>
                </tr>
                <tr>
                    <td>Password box: </td>
                    <td>
                        <input type="password" name="PasswordBox" />
                    </td>
                </tr>
                <tr>
                    <td>Scrolling Text Box: </td>
                    <td>
                        <textarea name="TextArea" cols="30" rows="5"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>Select Element/Option Element Drop Down List: </td>
                    <td>
                        <select name="DropDownList" size="1">
                            <option value="0">Make a selection</option>
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Select Element/Option Element List: </td>
                    <td>
                        <select name="SelectElementList" size="3">
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>A TextBox Control Label: <input type="text" name="ATextBox"/></label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="AnotherTextBox">Another Text Box Control Label: </label>
                        <input type="text" name="AnotherTextBox" id="AnotherTextBox"/>
                    </td>
                </tr>
                <tr>
                    <td>Fieldset Element/Legend Element: </td>
                    <td>
                        <fieldset name="FieldSet">
                            <legend>Legend</legend>
                            <label>Group Item 1:<input type="text" name="GroupItem1" /></label>
                            <label>Group Item 2:<input type="text" name="GroupItem2" /></label>
                            <label>Group Item 3:<input type="text" name="GroupItem3" /></label>
                        </fieldset>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                </tr>
            </table>
        </form>
    </body>
</html>